%p#notice= notice

%p
  %b Name:
  = @marina.name
%p
  %b Address:
  = @marina.address
%p
  %b Address2:
  = @marina.address2
%p
  %b Town:
  = @marina.town
%p
  %b County:
  = @marina.county
%p
  %b Country:
  = @marina.country
%p
  %b Managers:
  = @marina.managers.name
%p
  %b Boatowners:
  = @marina.boatowners.name

%h3 Users
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th Username
        %th Email
        %th Registered
        %th Role
        %th
    %tbody
      - @marina.boatowners.each do |user|
        %tr
          %td= link_to user.name, user
          %td= user.email
          %td= user.created_at.to_date
          %td= user.roles.first.name.titleize unless user.roles.first.nil?
          %td







